{
  "compilerOptions": {
    "module": "commonjs",                  // ðŸ‘ˆ en lugar de "nodenext"
    "moduleResolution": "node",
    "target": "ES2021",                    // ðŸ‘ˆ mÃ¡s estable que ES2023
    "lib": ["es2021"],                     // ðŸ‘ˆ asegura compatibilidad
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],             // ðŸ‘ˆ solo si quieres usar Jest
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  },
  "exclude": ["node_modules", "dist"]
}
